# Copy this file to .env and fill in your actual values

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/thekua-db
# or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/thekua-db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Email Configuration (if using email notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Social Authentication Configuration
# Get these from Google Cloud Console and Facebook Developer Console
GOOGLE_CLIENT_ID=your_google_client_id_here.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@thekua.com

# Upload Configuration (if using file uploads)
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# CORS Configuration (for production)
ALLOWED_ORIGINS=https://desimithaas.vercel.app
